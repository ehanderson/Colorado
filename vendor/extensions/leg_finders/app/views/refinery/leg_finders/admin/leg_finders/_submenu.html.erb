<div id='actions'>
  <ul>
    <% if ::Refinery::LegFinders::Admin::LegFindersController.searchable? %>
      <li>
        <%= render '/refinery/admin/search', :url => refinery.leg_finders_admin_leg_finders_path %>
      </li>
    <% end %>
    <li <%= "class='selected'" if params[:action] == "index" %>>
      <%= link_to t('.inbox'), refinery.leg_finders_admin_leg_finders_path, :class => "email_icon" %>
    </li>
    <li>
      <%= link_to t('.update_notified'),
                    refinery.edit_leg_finders_admin_setting_path(:leg_finder_notification_recipients, :dialog => true, :height => 300),
                    :class => "user_comment_icon" %>
    </li>
    <li>
      <%= link_to t('.edit_confirmation_email'),
                  refinery.edit_leg_finders_admin_setting_path(:leg_finder_confirmation_body, :dialog => true),
                  :class => "edit_email_icon" %>
    </li>
  </ul>
</div>
