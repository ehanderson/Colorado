<%= render 'submenu' %>
<div id='records'>
  <% if searching? %>
    <%= link_to t('cancel_search', :scope => 'refinery.admin.search'), refinery.leg_finders_admin_leg_finders_path, :class => "cancel-search" %>
    <h2><%= t('results_for_html', :scope => 'refinery.admin.search', :query => h(params[:search])).html_safe %></h2>
    <% if @leg_finders.any? %>
      <ul>
        <%= render :partial => 'leg_finder', :collection => @leg_finders %>
      </ul>
    <% else %>
      <p><%= t('no_results', :scope => 'refinery.admin.search') %></p>
    <% end %>
  <% else %>
    <% if @grouped_leg_finders.any? -%>
      <% @grouped_leg_finders.each do |container| %>
        <h3><%= l((leg_finder_group = container.last).first.created_at) %></h3>
        <ul>
          <%= render :partial => 'leg_finder', :collection => leg_finder_group %>
        </ul>
      <% end %>
    <% else -%>
      <p>
        <strong><%= t('.no_spam') %></strong>
      </p>
    <% end -%>
  <% end %>
</div>
