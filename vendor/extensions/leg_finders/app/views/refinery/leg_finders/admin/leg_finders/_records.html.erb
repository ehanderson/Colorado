<%= render 'refinery/admin/search_header', :url => refinery.leg_finders_admin_leg_finders_path %>
<% if searching? %>
  <% if @leg_finders.any? %>
    <ul>
      <%= render :partial => 'leg_finder', :collection => @leg_finders %>
    </ul>
  <% else %>
    <p><%= t('no_results', :scope => 'refinery.admin.search') %></p>
  <% end %>
<% else %>
  <% if @grouped_leg_finders.any? -%>
    <% @grouped_leg_finders.each do |container| %>
      <h3><%= l((leg_finder_group = container.last).first.created_at, :format => :short) %></h3>
      <ul>
        <%= render :partial => 'leg_finder', :collection => leg_finder_group %>
      </ul>
    <% end %>
  <% else -%>
    <p>
      <strong><%= t('no_leg_finders', :scope => 'refinery.leg_finders.admin.leg_finders.index') %></strong>
    </p>
  <% end -%>
<% end %>
