<div id='records'>
  <h2><%= t('.leg_finder') %></h2>
  <table id='leg_finder' class='inquiry'>
      <tr>
        <td>
          <strong>
            <%= t('.zip', :default => t('activerecord.attributes.leg_finder.zip')) %>
          </strong>
        </td>
        <td>
          <%= @leg_finder.zip %>
        </td>
      </tr>
  </table>
</div>
<div id='actions'>
  <h2><%= t('.details')%></h2>
  <p>
    <strong><%= t('.age') %>:</strong> <%= time_ago_in_words(@leg_finder.created_at) %>
  </p>
  <h2><%= t('.actions') %></h2>
  <ul>
    <li>
      <%= link_to t('.back_to_all_leg_finders'), refinery.url_for(:action => 'index'),
                   :class => "back_icon" %>
    </li>
    <li>
      <%= link_to t('delete', :scope => 'refinery.leg_finders.admin.leg_finders'),
                  refinery.leg_finders_admin_leg_finder_path(@leg_finder),
                  :class => 'delete_icon no-tooltip confirm-delete',
                  :title => t('delete', :scope => 'refinery.leg_finders.admin.leg_finders'),
                  :'data-confirm' => t('message', :scope => 'refinery.admin.delete', :title => @leg_finder.name),
                  :'data-method' => "delete" %>
    </li>
  </ul>
</div>
