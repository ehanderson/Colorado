<% content_for :body do %>
  <div class='leg_finders'>
    <%=raw @page.content_for(Refinery::Pages.default_parts.first.to_sym) %>
    <%= form_for [refinery, :leg_finders, @leg_finder] do |f| %>

      <% if @leg_finder.errors.any? %>
        <div id="errorExplanation">
          <h2>Please Enter a Valid Zip Code</h2>
        </div>
      <% end %>

      <div class='field zip_field string_field'>
        <%= f.required_label :zip %>
        <%= f.text_field :zip %>
      </div>

      <div class='actions'>
        <%= f.submit t('.send') %>
      </div>
    <% end %>
  </div>
<% end %>

<%= render '/refinery/content_page' %>
