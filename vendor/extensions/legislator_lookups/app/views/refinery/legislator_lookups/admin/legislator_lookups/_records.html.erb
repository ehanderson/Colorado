<%= render 'refinery/admin/search_header', :url => refinery.legislator_lookups_admin_legislator_lookups_path %>
<% if searching? %>
  <% if @legislator_lookups.any? %>
    <ul>
      <%= render :partial => 'legislator_lookup', :collection => @legislator_lookups %>
    </ul>
  <% else %>
    <p><%= t('no_results', :scope => 'refinery.admin.search') %></p>
  <% end %>
<% else %>
  <% if @grouped_legislator_lookups.any? -%>
    <% @grouped_legislator_lookups.each do |container| %>
      <h3><%= l((legislator_lookup_group = container.last).first.created_at, :format => :short) %></h3>
      <ul>
        <%= render :partial => 'legislator_lookup', :collection => legislator_lookup_group %>
      </ul>
    <% end %>
  <% else -%>
    <p>
      <strong><%= t('no_legislator_lookups', :scope => 'refinery.legislator_lookups.admin.legislator_lookups.index') %></strong>
    </p>
  <% end -%>
<% end %>
