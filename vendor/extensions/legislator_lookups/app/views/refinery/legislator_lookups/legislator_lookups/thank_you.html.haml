%div.row.text-center#leg-title
  %h1
    %span= @state
    %span Representatives
%div.row
  - $members_of_congress.each do |member|
    %div.small-6.columns.text-center(data-equalizer)
      %div
        =image_tag "http://theunitedstates.io/images/congress/225x275/#{member.bioguide_id}.jpg"
      %h4
        %span= member.state
        %span= member.title
        %span= member.firstname
        %span= member.lastname
        %span
          (#{member.party})
      %h6
        = member.congress_office
      %h6
        Phone:
        = member.phone
      %h6
        Fax:
        = member.fax
      %h6
        Website:
        = link_to "#{member.website}", member.website
      %h6
        Twitter Handle :
        %span
          = link_to "@#{member.twitter_id}", "https://twitter.com/#{member.twitter_id}"
      %h6
        Facebook:
        %span
        = link_to "#{member.firstname}'s Facebook Page", "http://facebook.com/#{member.facebook_id}"
      %br
      %br
%div.row#leg-row
  %div.small-6.small-offset-3.columns.text-center.local-leg
    %h4
      What to learn more about your local legislators?

      = link_to "Click Here", "http://openstates.org/#{@state.downcase}/", target:"_blank"
