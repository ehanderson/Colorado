  <section>
    <h1>Role</h1>
    <p>
      <%=raw @web_user.role %>
    </p>
  </section>
  <section>
    <h1>First Name</h1>
    <p>
      <%=raw @web_user.first_name %>
    </p>
  </section>
  <section>
    <h1>Last Name</h1>
    <p>
      <%=raw @web_user.last_name %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @web_user.email %>
    </p>
  </section>
  <section>
    <h1>Organization</h1>
    <p>
      <%=raw @web_user.organization %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @web_user.title %>
    </p>
  </section>
  <section>
    <h1>Twitter Handle</h1>
    <p>
      <%=raw @web_user.twitter_handle %>
    </p>
  </section>
  <section>
    <h1>Tweeter</h1>
    <p>
      <%=raw @web_user.tweeter %>
    </p>
  </section>
  <section>
    <h1>Opinion Editorial</h1>
    <p>
      <%=raw @web_user.opinion_editorial %>
    </p>
  </section>
  <section>
    <h1>Letter To Editor</h1>
    <p>
      <%=raw @web_user.letter_to_editor %>
    </p>
  </section>
  <section>
    <h1>Position</h1>
    <p>
      <%=raw @web_user.position %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @web_user.email %>
    </p>
  </section>
  <section>
    <h1>Phone Number</h1>
    <p>
      <%=raw @web_user.phone_number %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="web_users">
      <% @web_users.each do |web_user| %>
        <li>
          <%= link_to web_user.role, refinery.web_users_web_user_path(web_user) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
