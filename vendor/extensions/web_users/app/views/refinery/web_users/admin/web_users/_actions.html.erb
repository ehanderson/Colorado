<ul>
  <% if ::Refinery::WebUsers::Admin::WebUsersController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.web_users_admin_web_users_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_web_users_admin_web_user_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::WebUsers::Admin::WebUsersController.sortable? && ::Refinery::WebUsers::WebUser.any? %>
  <li>
    <%= link_to t('.reorder', :what => "Web Users"),
                 refinery.web_users_admin_web_users_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Web Users"),
                 refinery.web_users_admin_web_users_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
