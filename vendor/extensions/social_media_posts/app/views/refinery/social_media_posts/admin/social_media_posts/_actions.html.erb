<ul>
  <% if ::Refinery::SocialMediaPosts::Admin::SocialMediaPostsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.social_media_posts_admin_social_media_posts_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_social_media_posts_admin_social_media_post_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::SocialMediaPosts::Admin::SocialMediaPostsController.sortable? && ::Refinery::SocialMediaPosts::SocialMediaPost.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Social Media Posts"),
                 refinery.social_media_posts_admin_social_media_posts_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Social Media Posts"),
                 refinery.social_media_posts_admin_social_media_posts_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
