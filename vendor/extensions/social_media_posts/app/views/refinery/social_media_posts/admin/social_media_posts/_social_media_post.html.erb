<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(social_media_post) -%>">
  <span class='title'>
    <%= social_media_post.title %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.social_media_posts_social_media_post_path(social_media_post),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_social_media_posts_admin_social_media_post_path(social_media_post),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.social_media_posts_admin_social_media_post_path(social_media_post),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => social_media_post.title),
        :method => :delete %>
  </span>
</li>
