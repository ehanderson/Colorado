%div.home-body
  %div.row
    %div.small-12.columns.home
      %div.small-12.medium-6.columns.mission
        = raw(@page.content_for(:mission))
      %br.show-for-small-only
      %div.small-12.medium-6.columns.sign-up
        %div#sign-up-form
          %h1 Sign Up
          %form{action: "https://hq-salsa4.salsalabs.com/save", method: "POST"}
            %input{name: "organization_KEY", type: "hidden", value: "51084"}/
            %input{name: "object", type: "hidden", value: "supporter"}/
            %div.row
              %div.field.small-6.columns
                %input#first_name{name: "First_Name", type: "text", placeholder: 'First Name'}/
              %div.field.small-6.columns
                %input#last_name{name: "Last_Name", type: "text", placeholder: 'Last Name'}/
            %div.row
              %div.field.small-12.columns.small-centered
                %input#email{name: "Email", type: "text", placeholder: 'Email'}/
            %div.row.bottom
              %div.field.small-6.columns.left
                %input#zip{name: "Zip", type: "text", placeholder: 'Zip Code'}/
              %input{name: "tag", type: "hidden", value: "supporter"}/
              %input{name: "tag", type: "hidden", value: "emails"}/
              %input{name: "redirect", type: "hidden", value: "http://climbhighercolorado.herokuapp.com/"}/
              %div.actions.small-6.columns.right
                %input.custom-button-class{type: "Submit", value: "Sign up"}/
  %div.row
    %div.large-12.large-centered.columns.spacing.hide-for-small-only
  %div.row.news-group
    %div.small-12.large-12.columns.news(data-equalizer)
      %div.large-4.medium-4.small-12.columns.news-panels(data-equalizer-watch)
        = raw(@page.content_for(:News1))
      %div.large-4.medium-4.small-12.columns.news-panels.splits(data-equalizer-watch)
        = raw(@page.content_for(:News2))
      %div.large-4.medium-4.small-12.columns.news-panels.splits(data-equalizer-watch)
        = raw(@page.content_for(:News3))
  %div.row
    %div.large-12.large-centered.columns.spacing.hide-for-small-only
  %div.row
    = render partial: '/refinery/social_media_cycler'

= render '/refinery/draft_page_message' unless @page.nil? or @page.live?

