%div.small-12.columns.social-media(data-equalizer)
  %div.small-12.medium-4.columns.text-centered(data-equalizer-watch)
    %h4
      Follow Us On Social Media!

  %div.small-12.medium-4.columns.social-media-panels.text-centered.splits(data-equalizer-watch)
    %div.text-centered.inline.sm-header
      = link_to(image_tag('facebook_logo_detail.png', class: 'social-media-img'), "https://www.facebook.com/climbhigherco", target: "_blank")
      = raw(@page.content_for(:facebook))
      %div.cycler
        %ul
          - @facebook.each_with_index do |post, index|
            -  element_class = index == 0 ? 'active' : 'inactive'
            %li{class: element_class}
              = truncate("\"#{post.content}\"", length: 100, separator: " ")

  %div.small-12.medium-4.columns.social-media-panels.text-centered.splits(data-equalizer-watch)
    %div.text-centered.inline.sm-header
      = link_to(image_tag('twitter.png', class: 'social-media-img'), "https://www.twitter.com/ClimbHigherCO", target: "_blank")
      = raw(@page.content_for(:twitter))
      %div.cycler
        %ul
          - @twitter.each_with_index do |post, index|
            -  element_class = index == 0 ? 'active' : 'inactive'
            %li{class: element_class}
              = truncate("\"#{post.content}\"", length: 100, separator: " ")
