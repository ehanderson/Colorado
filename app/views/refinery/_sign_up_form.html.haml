%div.row
  %div#sign-up-form
    %form{action: "https://hq-salsa4.salsalabs.com", method: "POST"}
      %input{name: "organization_KEY", type: "hidden", value: "51084"}/
      %input{name: "object", type: "hidden", value: "supporter"}/
      %row
        %div.field.large-6.columns
          %label{for: "first_name"} First Name:
          %input#first_name{name: "First_Name", type: "text"}/
        %div.field.large-6.columns
          %label{for: "last_name"} Last Name:
          %input#last_name{name: "Last_Name", type: "text"}/
      %row
        %div.field.large-12.columns
          %label{for: "zip"} Zip Code:
          %input#zip{name: "Zip", type: "text"}/
      %row
        %div.field.large-12.columns
          %label{for: "email"} Email:
          %input#email{name: "Email", type: "text"}/
      %input{name: "tag", type: "hidden", value: "supporter"}/
      %input{name: "tag", type: "hidden", value: "emails"}/
      %input{name: "redirect", type: "hidden", value: "http://climbhighercolorado.herokuapp.com/"}/
      %div.actions.large-6.columns#sign-up-button
        %input{type: "Submit", value: "Sign up"}/
