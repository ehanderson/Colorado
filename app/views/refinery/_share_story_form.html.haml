%div.row
  %form{action: "https://hq-salsa4.salsalabs.com/save", method: "POST"}
    %input{name: "organization_KEY", type: "hidden", value: "51084"}/
    %input{name: "object", type: "hidden", value: "supporter"}/
    %row
      %div.field.large-6.columns
        %label{for: "first_name"} First Name:
        %input#first_name{name: "First_Name", type: "text"}/
      %div.field.large-6.columns
        %label{for: "last_name"} Last Name:
        %input#last_name{name: "Last_Name", type: "text"}/
    %row
      %div.field.large-6.columns
        %label{for: "email"} Email:
        %input#email{name: "Email", type: "text"}/
      %div.field.large-6.columns
        %label{for: "phone"} Phone:
        %input#phone{name: "Phone", type: "text"}/
    %row
      %div.field.large-6.columns
        %label{for: "twitter"} Twitter Handle:
        %input#twitter{name: "twitter", type: "text"}/
      %div.field.large-6.columns
        %label{for: "organization"} Organization:
        %input#organization{name: "Organization", type: "text"}/
    %div.field.message_field.large-12.columns
      %label{for: "story"} Story:
      %input#story{name: "story", type: "text"}/
    %div.field.message_field.large-12.columns
      %h6 Tweeter:
      %p Check the box if you're interested in receiving emails with sample social media content for you to post
      %input{name: "tag", type: "checkbox", value: "emails"}/
    %div.field.message_field.large-12.columns
      %h6 Opinion Editorial (Op-Ed)?:
      %p Check the box if you're interested in writing an op-ed to be posted in a local newspaper
      %input{name: "tag", type: "checkbox", value: "op-ed-newspaper"}/
    %div.field.message_field.large-12.columns
      %h6 Letter to the Editor (LTE)?:
      %p Check the box if you're interested in writing a letter to the editor to be posted in a local newspaper
      %input{name: "tag", type: "checkbox", value: "letter-to-editor"}/
    %input{name: "tag", type: "hidden", value: "story"}/
    %input{name: "redirect", type: "hidden", value: "http://climbhighercolorado.herokuapp.com/"}/
    / %div.field.radio.large-10.columns
    /   = f.label :tweeter, "Are you interested in receiving emails with sample social media content for you to post?", class: 'inline'
    /   = f.radio_button :tweeter, "0", class: 'inline'
    / %div.field.radio.large-10.columns
    /   = f.label :opinion_editorial, "Are you interested in writing an op-ed to be posted in a local newspaper?", class: 'inline'
    /   = f.radio_button :opinion_editorial, "0", class: 'inline'
    / %div.field.radio.large-10.columns
    /   = f.label :letter_to_editor, "Are you interested in writing a letter to the editor to be posted in a local newspaper?", class: 'inline'
    /   = f.radio_button :letter_to_editor, "0", class: 'inline'
    %div.actions.large-12.columns
      %input{type: "Submit", value: "Sign up"}/
